    <script>
        function updateCountdown() {
            $('.table tbody tr').each(function() {
                const timerId = $(this).find('[id^="timer-"]').attr('id');
                const waktuSelesai = '2024-06-15 10:00:00'; // Ganti dengan waktu selesai dari database
        
                const countDownDate = new Date(waktuSelesai).getTime();
                const now = new Date().getTime();
                const distance = countDownDate - now;
        
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
        
                $(`#${timerId}`).text(`${days}d ${hours}h ${minutes}m ${seconds}s`);
        
                if (distance < 0) {
                    $(`#${timerId}`).text('Lelang Selesai');
                }
            });
        }
        
        // Update countdown setiap detik
        setInterval(updateCountdown, 1000);
    </script>
