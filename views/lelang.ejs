    <script>
        // Konfirmasi Lelang
        // Di lelang.ejs, perbaiki script konfirmasi lelang
$('.konfirmasi-lelang').on('click', function() {
    const idBarang = $(this).closest('tr').find('td:first').text(); // Ambil ID barang dari baris tabel
    
    // Tampilkan modal konfirmasi lelang
    $('#konfirmasiLelangModal').modal('show');
    
    // Isi form dengan data barang
    $('#idBarangKonfirmasi').val(idBarang);
});

// Submit form konfirmasi lelang
$('#formKonfirmasiLelang').on('submit', function(e) {
    e.preventDefault();
    
    const idBarang = $('#idBarangKonfirmasi').val();
    const waktuMulai = $('#waktuMulaiLelang').val();
    const waktuSelesai = $('#waktuSelesaiLelang').val();
    const hargaAwal = $('#hargaAwalLelang').val();
    
    $.ajax({
        url: `/konfirmasi-lelang/${idBarang}`,
        method: 'POST',
        data: {
            waktu_mulai: waktuMulai,
            waktu_selesai: waktuSelesai,
            harga_awal: hargaAwal
        },
        success: function(response) {
            if (response.success) {
                Swal.fire('Berhasil!', 'Lelang berhasil dikonfirmasi', 'success');
                location.reload(); // Refresh halaman
            }
        },
        error: function() {
            Swal.fire('Gagal!', 'Terjadi kesalahan saat konfirmasi lelang', 'error');
        }
    });
});

        // Perpanjang Lelang
$('.perpanjang-lelang').on('click', function() {
    const idLelang = $(this).data('id');
    
    Swal.fire({
        title: 'Perpanjang Waktu Lelang',
        input: 'number',
        inputLabel: 'Tambahan Waktu (Jam)',
        showCancelButton: true,
        confirmButtonText: 'Perpanjang',
        preConfirm: (tambahWaktu) => {
            return $.ajax({
                url: `/perpanjang-lelang/${idLelang}`,
                method: 'POST',
                data: { tambahan_waktu: tambahWaktu },
                success: function(response) {
                    if (response.success) {
                        Swal.fire('Berhasil!', 'Waktu lelang diperpanjang', 'success');
                        location.reload();
                    }
                },
                error: function() {
                    Swal.fire('Gagal!', 'Terjadi kesalahan', 'error');
                }
            });
        }
    });
});

