                <div class="container-fluid">
                    <div class="modal fade" id="addBarangModal" tabindex="-1" aria-labelledby="addBarangModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="addBarangModalLabel">Tambah Barang Baru</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form id="addBarangForm" action="/api/barang" method="POST"
                                        enctype="multipart/form-data">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Kode Barang</label>
                                                <input type="text" class="form-control" name="id_barang" required>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Nama Barang</label>
                                                <input type="text" class="form-control" name="nama_barang" required>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Gambar Barang</label>
                                            <input type="file" class="form-control" name="gambar_barang">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Deskripsi Barang</label>
                                            <textarea class="form-control" name="deskripsi_barang" rows="3"></textarea>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Kategori</label>
                                                <select class="form-select" name="kategori" required>
                                                    <option value="">Pilih Kategori</option>
                                                    <option value="Elektronik">Elektronik</option>
                                                    <option value="Furniture">Furniture</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Lokasi Barang</label>
                                                <input type="text" class="form-control" name="lokasi_barang" required>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Harga Barang</label>
                                                <input type="text" class="form-control input-harga" name="harga_barang"
                                                    required>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Status Barang</label>
                                                <select class="form-select" name="status_barang" required>
                                                    <option value="tersedia">Tersedia</option>
                                                    <option value="lelang">Lelang</option>
                                                    <option value="jual">Jual</option>
                                                </select>
                                            </div>
                                            <div class="row mb-3 d-none" id="waktuLelang">
                                                <div class="col-md-6">
                                                    <label class="form-label">Waktu Mulai Lelang</label>
                                                    <input type="datetime-local" class="form-control" name="waktu_mulai"
                                                        id="waktu_mulai" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="form-label">Waktu Selesai Lelang</label>
                                                    <input type="datetime-local" class="form-control"
                                                        name="waktu_selesai" id="waktu_selesai" required>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Pemilik</label>
                                            <select class="form-select" name="id_karyawan" required>
                                                <option value="">Pilih Pemilik</option>
                                                <% karyawan.forEach(function(k) { %>
                                                    <option value="<%= k.id_karyawan %>">
