                <div class="container-fluid">
                    <h3 class="text-dark mb-4">Pemilik Barang</h3>
                    
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Nama Barang</th>
                                            <th>Pemilik Saat Ini</th>
                                            <th>Pemilik Sebelumnya</th>
                                            <th>Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% kepemilikan.forEach(function(item) { %>
                                        <tr>
                                            <td><%= item.nama_barang %></td>
                                            <td><%= item.pemilik_sekarang %></td>
                                            <td><%= item.pemilik_sebelumnya || '-' %></td>
                                            <td>
                                                <button class="btn btn-primary btn-sm" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#historiModal"
                                                        onclick="loadHistori('<%= item.id_barang %>')">
                                                    <i class="fas fa-history"></i> Riwayat
                                                </button>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="historiModal" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Histori Kepemilikan</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Tanggal</th>
                                                <th>Pemilik</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody id="historiTableBody">
                                            <!-- Data will be loaded dynamically -->
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <footer class="sticky-footer bg-white">
